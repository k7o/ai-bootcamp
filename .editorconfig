root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 88

[*.py]
# Python files: 4 spaces, Black-compatible 88 char line length
indent_style = space
indent_size = 4
max_line_length = 88
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.pyi]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
# YAML typically uses 2 spaces
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[Makefile]
indent_style = tab
trim_trailing_whitespace = false

[*.ipynb]
# Don't trim whitespace inside notebooks
trim_trailing_whitespace = false

